@model IEnumerable<MVC_Project.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Emloyees</h1>

<div class="row my-4">
    <div class="col-md-4">
        <a class="nav-link btn-success text-white w-50 text-center" style="border-radius:5px;" asp-area="" asp-controller="Attendances" asp-action="index">Attendances</a>
    </div>
    <div class="col-md-4">
        <a class="nav-link btn-dark text-white w-50 text-center" style="border-radius:5px;" asp-area="" asp-controller="AttendanceSummaries" asp-action="index">Attendance Summaries</a>
    </div>
    <div class="col-md-4">
        <a class="nav-link btn-primary text-white w-50 text-center" style="border-radius:5px;" asp-area="" asp-controller="Salaries" asp-action="index">Process Salaries</a>
    </div>
</div>
<a class="btn btn-primary" asp-action="Create">Create New</a>

