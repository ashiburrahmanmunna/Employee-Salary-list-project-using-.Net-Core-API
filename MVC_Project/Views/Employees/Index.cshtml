                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gross)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Basic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HRent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Medical)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Others)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dtJoin)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EmpId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EmpId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EmpId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
